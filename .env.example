# Server
PORT=3001
NODE_ENV=production

# Database (SQLite file path)
DATABASE_URL="file:./data/prelude.db"

# Session (change this to a random string at least 32 characters)
SESSION_SECRET="change-this-to-a-random-secret-at-least-32-chars"
SESSION_MAX_AGE=604800000  # 7 days in milliseconds

# Registration
ALLOW_REGISTRATION=false   # Set to true to allow self-registration
REQUIRE_APPROVAL=false     # If true, new users need admin approval

# Default Admin (created on first run)
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="changeme"
ADMIN_NAME="Administrator"

# Cookie Settings (for reverse proxy setups)
# auto = secure in production, true = always secure, false = never secure
COOKIE_SECURE=auto
